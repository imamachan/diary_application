<% content_for(:title, t('.title')) %>
<%= render 'shared/flash_messages' %>

<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-xl font-semibold"><%= t('.title') %></h1>
    <%= link_to t('defaults.edit'), edit_profile_path, class: 'bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600' %>
  </div>

  <div class="flex items-center space-x-4">
    <div class="w-20 h-20 rounded-full overflow-hidden border">
      <%= image_tag current_user.profile_picture.url || 'sample.jpg', class: 'w-full h-full object-cover' %>
    </div>
    <div>
      <p class="text-lg font-semibold"><%= current_user.name %></p>
      <p class="text-gray-500 text-sm"><%= current_user.email %></p>
      <p class="text-gray-600"><%= current_user.profile_comment.presence || "コメントがありません。" %></p>
    </div>
  </div>
</div>
