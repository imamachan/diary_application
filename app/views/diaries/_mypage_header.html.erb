<div class="fixed top-16 left-64 w-[calc(100%-16rem)] bg-white shadow-md z-30">
  <div class="flex justify-between items-center p-4 border-b">
    <!-- プロフィール情報 -->
    <div class="flex items-center">
      <!-- ユーザーアイコン -->
      <div>
        <%= image_tag current_user.profile_picture.url.presence || "sample.jpg", class: "w-14 h-14 rounded-full shadow-md" %>
      </div>

      <div class="ml-4 flex items-center">
        <div>
          <!-- ユーザー名と編集アイコン -->
          <div class="text-lg font-semibold flex items-center">
            <%= link_to current_user.name, profile_path, class: "hover:underline" %>
            <%= link_to edit_profile_path, class: "ml-2 text-gray-500 hover:text-gray-700" do %>
              <i class="fa-regular fa-pen-to-square"></i>
            <% end %>
          </div>
          <div class="text-sm text-gray-600">
            <%= current_user.profile_comment.presence || "一言コメントがありません。" %>
          </div>
        </div>
      </div>
    </div>

    <!-- ボタン -->
    <div class="flex space-x-4">
      <%= link_to t("mypage_header.diary_create"), new_diary_path, class: "border p-2 rounded bg-orange-400 text-white hover:bg-orange-600" %>
      <%= link_to calendar_diaries_path, class: "text-gray-500 hover:text-gray-700 text-xl" do %>
        <i class="fa-regular fa-calendar"></i>
      <% end %>
    </div>
  </div>

  <!-- タブ（シンプルにURLでページ遷移） -->
  <div class="flex border-b">
    <%= link_to t("mypage_header.public"), mypage_path, 
          class: "px-6 py-2 text-center w-1/4 #{controller.action_name == 'mypage' ? 'bg-orange-400 text-white' : 'bg-white'}" %>
    <%= link_to t("mypage_header.private"), private_mypage_diaries_path, 
          class: "px-6 py-2 text-center w-1/4 #{controller.action_name == 'private_mypage' ? 'bg-orange-400 text-white' : 'bg-white'}" %>
    <%= link_to t("mypage_header.comments"), mypage_comments_path, 
          class: "px-6 py-2 text-center w-1/4 #{controller.action_name == 'my_comments' ? 'bg-orange-400 text-white' : 'bg-white'}" %>
    <%= link_to t("mypage_header.favorite"), bookmarks_diaries_path, 
          class: "px-6 py-2 text-center w-1/4 #{controller.action_name == 'bookmarks' ? 'bg-orange-400 text-white' : 'bg-white'}" %>
  </div>
</div>
