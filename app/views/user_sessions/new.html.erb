<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<div>
  <div>
    <div>
      <h1>ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div 
          <%= f.label :メールアドレス %>
          <%= f.email_field :email %>
        </div>
        <div>
          <%= f.label :パスワード %>
          <%= f.password_field :password %>
        </div>
        <%= f.submit "ログイン" %>
      <% end %>
      <div>
        <%= link_to '登録ページへ', new_user_path %>
        <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
      </div>
    </div>
  </div>
</div>