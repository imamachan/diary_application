<% if flash[:alert] %>
  <p class="text-red-500 text-center text-sm"><%= flash[:alert] %></p>
<% end %>

<div data-layer="Desktop - ログイン" class="Desktop w-full h-screen relative bg-white overflow-hidden flex items-center">
  <!-- ロゴ (左側に右寄せ) -->
  <div class="w-1/2 flex justify-end items-center">
    <div data-layer="HiBiLog" class="Hibilog w-[228px] h-[243px] text-8xl font-bold font-['Inter'] tracking-[9.60px] text-[#ffa306] text-center">
      HiBi<br>Log
    </div>
  </div>

  <!-- フォーム (左寄せ) -->
<div class="w-1/2 flex flex-col items-start space-y-4 ml-8">
  <%= form_with url: login_path, class: "flex flex-col items-start space-y-6 w-64" do |f| %>
    <!-- メールアドレス -->
    <div class="flex flex-col w-full">
      <%= f.label :email, t("views.sessions.email"), class: "text-black text-base font-normal font-['Inter'] tracking-wider mb-1" %>
      <%= f.email_field :email, class: "w-full h-10 bg-white border border-black rounded-md px-2" %>
    </div>
    
    <!-- パスワード -->
    <div class="flex flex-col w-full">
      <%= f.label :password, t("views.sessions.password"), class: "text-black text-base font-normal font-['Inter'] tracking-wider mb-1" %>
      <%= f.password_field :password, class: "w-full h-10 bg-white border border-black rounded-md px-2" %>
    </div>
    
    <!-- ログインボタン -->
    <%= f.submit t("views.sessions.login"), class: "block w-[180px] h-[50px] bg-[#ffa306] text-center flex items-center justify-center text-[#333333] text-xl font-normal font-['Inter'] hover:bg-[#ffb733] transition duration-200" %>
  <% end %>

  <!-- 戻るリンク (フォームの下に配置) -->
  <div class="flex justify-start">
    <%= link_to t("views.sessions.back"), root_path, class: "text-zinc-800 text-base font-normal font-['Inter']" %>
  </div>
</div>
