
<% content_for(:title, t('.title')) %>
<%= render "shared/flash_messages" %>

<% if flash[:alert] %>
  <p class="text-red-500 text-center text-sm"><%= flash[:alert] %></p>
<% end %>

<div data-layer="Desktop - ログイン" class="Desktop w-full h-screen relative bg-white overflow-hidden flex items-center">
  <!-- ロゴ (左側に右寄せ) -->
  <div class="w-1/2 flex justify-end items-center">
    <div data-layer="HiBiLog" class="Hibilog w-[228px] h-[243px] text-8xl font-bold font-['Inter'] tracking-[9.60px] text-[#ffa306] text-center">
      HiBi<br>Log
    </div>
  </div>

  <!-- フォーム (左寄せ) -->
<div class="w-1/2 flex flex-col items-start space-y-4 ml-8">
  <%= form_with url: login_path, class: "flex flex-col items-start space-y-6 w-64" do |f| %>
    <!-- メールアドレス -->
    <div class="flex flex-col w-full">
      <%= f.label :email, t(".email"), class: "text-black text-base font-normal font-['Inter'] tracking-wider mb-1" %>
      <%= f.email_field :email, class: "w-full h-10 bg-white border border-black rounded-md px-2" %>
    </div>
    
    <!-- パスワード -->
    <div class="flex flex-col w-full">
      <%= f.label :password, t(".password"), class: "text-black text-base font-normal font-['Inter'] tracking-wider mb-1" %>
      <%= f.password_field :password, class: "w-full h-10 bg-white border border-black rounded-md px-2" %>
    </div>
    
    <!-- ログインボタン -->
    <div class="w-full flex justify-center mt-4">
      <%= f.submit t(".login"), class: "w-[180px] h-[50px] bg-[#ffa306] text-center flex items-center justify-center text-[#333333] text-xl font-normal rounded-md hover:bg-[#ffb733] transition duration-200" %>
    </div>
  <% end %>

  <!-- 戻るリンク (フォームの下に配置) -->
    <div class="w-full flex justify-start mt-2 ml-10">
      <%= link_to t(".back"), root_path, class: "w-[180px] h-[50px] bg-gray-300 text-center flex items-center justify-center text-[#333333] text-xl font-normal rounded-md hover:bg-gray-400 transition duration-200" %>
    </div>

    <!-- パスワードリセット (適切な間隔で下に配置) -->
    <div class="w-full flex justify-start mt-2 ml-10">
      <%= link_to t('.password_forget'), new_password_reset_path, class: "text-blue-600 hover:underline" %>
    </div>

  
</div>
