<% content_for(:title, t('.title')) %>

<div class="max-w-2xl mx-auto mt-16 p-8 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-semibold mb-6 text-center"><%= t('.title') %></h1>

  <%= form_with url: password_resets_path, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :email, t(".email"), class: "block text-gray-700 font-medium mb-1" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
    </div>

    <%= f.submit t('.submit'), class: "w-full bg-orange-500 text-white py-3 rounded-lg hover:bg-orange-600 text-lg" %>
  <% end %>
</div>
