<div class="border rounded-lg shadow-md p-4 w-full max-w-4xl mx-auto mt-4" id="comment-<%= comment.id %>" >
  <div class="flex items-center space-x-4">
    <!-- ユーザーアイコン -->
    <%= link_to comment.user do %>
    <%= image_tag comment.user.profile_picture.url || 'sample.jpg', class: 'w-14 h-14 rounded-full object-cover' %>
  <% end %>

    <!-- コメント内容 -->
    <div class="flex-1">
      <p class="text-lg font-semibold"><%= comment.user.name %></p>
      <p class="text-gray-700"><%= comment.body %></p>
    </div>

    <!--削除ボタン -->
    <div class="space-x-2">
      <%= link_to t("helpers.submit.delete"), comment_path(comment), 
      data: { 
      turbo_method: :delete, 
      turbo_confirm: t("defaults.delete_confirm") 
      }, 
      class: "border px-3 py-1 rounded bg-gray-200 hover:bg-gray-300 text-sm" %>
    </div>
  </div>

  <!-- コメント下部の情報 -->
  <div class="flex justify-between items-center mt-2 text-gray-600 text-sm">
    <p class="text-gray-500"><%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
  </div>
</div>
