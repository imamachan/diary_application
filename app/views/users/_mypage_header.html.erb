<div class="fixed top-16 left-64 w-[calc(100%-16rem)] bg-white shadow-md z-30">
  <div class="flex justify-between items-center p-4 border-b">
    <!-- プロフィール情報 -->
    <div class="flex items-center">
      <!-- ユーザーアイコン -->
      <div class="w-14 h-14 bg-gray-300 rounded-full"></div>

      <div class="ml-4 flex items-center">
        <div>
          <!-- ユーザー名と編集アイコン -->
          <div class="text-lg font-semibold flex items-center">
            <%= current_user.name %>
            <%= link_to "#", class: "ml-2 text-gray-500 hover:text-gray-700" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 20h9" />
                <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4Z" />
              </svg>
            <% end %>
          </div>
          <div class="text-sm text-gray-600">profile</div>
        </div>
      </div>
    </div>

    <!-- ボタン -->
    <div class="flex space-x-4">
      <%= link_to "日記を書く", new_diary_path, class: "border p-2 rounded bg-orange-400 text-white hover:bg-orange-600" %>
    </div>
  </div>

  <!-- タブ -->
  <div class="flex border-b">
    <% tabs = { "公開" => "#", "非公開" => "#", "コメント" => "#", "お気に入り" => "#" } %>
    <% tabs.each do |name, path| %>
      <%= link_to name, path, class: "px-6 py-2 text-center w-1/4 #{name == '公開' ? 'bg-orange-400 text-white' : 'bg-white'}" %>
    <% end %>
  </div>
</div>
