<div class="fixed top-16 left-64 w-[calc(100%-16rem)] bg-white shadow-md z-30">
  <div class="flex justify-between items-center p-4 border-b">
    <!-- プロフィール情報 -->
    <div class="flex items-center">
      <!-- ユーザーアイコン -->
      <div class="w-14 h-14 bg-gray-300 rounded-full"></div>

      <div class="ml-4 flex items-center">
        <div>
          <!-- ユーザー名と編集アイコン -->
          <div class="text-lg font-semibold flex items-center">
            <%= current_user.name %>
            <%= link_to "#", class: "ml-2 text-gray-500 hover:text-gray-700" do %>
              <i class="fa-regular fa-pen-to-square"></i>
            <% end %>
          </div>
          <div class="text-sm text-gray-600">profile</div>
        </div>
      </div>
    </div>

    <!-- ボタン -->
    <div class="flex space-x-4">
      <%= link_to t("mypage_header.diary_create"), new_diary_path, class: "border p-2 rounded bg-orange-400 text-white hover:bg-orange-600" %>
    </div>
  </div>

  <!-- タブ -->
  <div class="flex border-b">
    <% tabs = { t("mypage_header.public") => "#", t("mypage_header.private") => "#", t("mypage_header.comments") => "#", t("mypage_header.favorite") => "#" } %>
    <% tabs.each do |name, path| %>
      <%= link_to name, path, class: "px-6 py-2 text-center w-1/4 #{name == t("mypage_header.public") ? 'bg-orange-400 text-white' : 'bg-white'}" %>
    <% end %>
  </div>
</div>
