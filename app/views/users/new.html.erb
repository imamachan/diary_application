<div>
  <div>
    <div>
      <h1>ユーザー登録</h1>
      <%= form_with model: @user do |f| %>
        <div>
          <%= f.label :名前 %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :メールアドレス %>
          <%= f.email_field :email %>
        </div>
        <div>
          <%= f.label :パスワード %>
          <%= f.password_field :password %>
        </div>
        <div>
          <%= f.label :パスワード確認 %>
          <%= f.password_field :password_confirmation %>
        </div>
        <%= f.submit "登録" %>
      <% end %>
      <div>
        <%= link_to 'ログインページへ', "" %>
      </div>
    </div>
  </div>
</div>